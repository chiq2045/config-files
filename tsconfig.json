{
  "compilerOptions": {
    "strict": true,
    "noFallthroughCasesInSwitch": true,
    "baseUrl": "./",
    "resolveJsonModule": true,
    "outDir": "./out/",
    "preserveConstEnums": true,
    "esModuleInterop": true,
    "verbatimModuleSyntax": true,
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "noImplicitAny": true,
    "target": "es6",
    "jsx": "react",
    "paths": {
      "app": [
        "app"
      ],
      "src": [
        "src"
      ],
      "types": [
        "types"
      ],
      "utils": [
        "utils"
      ]
    }
  },
  "include": [
    "src",
    "app",
    "types",
    "utils",
    "webpack.common.ts",
    "webpack.dev.ts",
    "webpack.prod.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
